body
  color: $black
  font-family: $chalkboard, $sans-serif
  font-weight: normal
  line-height: 1.5
  padding: $spacing-base

h1, h2, h3, h4, h5, h6
  color: $regular-red
  font-weight: 500

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
  font-weight: inherit

h1
  fontSize($h1-fontsize)
  line-height: 110%
  margin: (@font-size / 2) 0 (@font-size / 2.5) 0


h2
  fontSize($h2-fontsize)
  line-height: 110%
  margin: (@font-size / 2) 0 (@font-size / 2.5) 0

h3
  fontSize($h3-fontsize)
  line-height: 110%
  margin: (@font-size / 2) 0 (@font-size / 2.5) 0

h4
  fontSize($h4-fontsize)
  line-height: 110%
  margin: (@font-size / 2) 0 (@font-size / 2.5) 0

h5
  fontSize($h5-fontsize)
  line-height: 110%
  margin: (@font-size / 2) 0 (@font-size / 2.5) 0

h6
  fontSize($h6-fontsize)
  line-height: 110%
  margin: (@font-size / 2) 0 (@font-size / 2.5) 0

.list
  line-height: 1.8
  margin: $spacing-small 0
  padding-left: $spacing-small

  &-bulleted
    list-style-type: disc
    margin-bottom: 0

  &-numbered
    list-style-type: decimal
