.header
  color: $regular-red
  font-family: $good-dog
  margin: 0 auto
  text-align: center
  width: 90%

  &-city
    font-size: 1.5rem
    line-height: 1
    padding: 0

  &-logo
    float: left

    img
      height: 100px
      width: 100px

  &-subtitle
    color: $dark-green
    font-family: $chalkboard
    font-size: 1.2rem
    text-align: center

  &-title
    height: 50px
    padding: $spacing-small 0 $spacing-micro
    text-align: center
    width: 600px

  &-welcome
    font-size: 1.5rem
    line-height: 1
    padding: 0
