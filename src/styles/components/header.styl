.header
  color: $regular-red
  display: flex
  font-family: $good-dog
  margin: 0 auto

  &-city
    font-size: 1.5rem
    line-height: 1
    padding: 0

  &-logo
    img
      height: 90px
      width: 90px

  &-inner
    text-align: center
    width: 100%

  &-subtitle
    color: $dark-green
    font-family: $chalkboard
    font-size: 1.2rem
    text-align: center

  &-title
    height: 50px
    padding: $spacing-small 0 0
    text-align: center
    width: 600px

  &-welcome
    font-size: 1.5rem
    line-height: 1
    padding: 0
