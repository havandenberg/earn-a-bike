.personal-info
  display: flex
  flex-direction: column
  margin-top: $spacing-small
  width: 100%

  &__container
    display: flex

  &__labels
    align-items: flex-end
    display: flex
    flex-basis: 35%
    flex-direction: column

  &__values
    align-items: flex-start
    display: flex
    flex-basis: 65%
    flex-direction: column

  &__label
    color: $placeholder-red
    font-size: 1rem
    line-height: 1.5rem
    margin-right: $spacing-small
    margin-top: $spacing-micro

  &__spacing
    margin-top: $spacing-small

    &-pin
      margin-top: 5.4rem
      text-align: right

  &__value
    color: $regular-red
    font-size: 1.2rem
    line-height: 1.3
    margin-top: $spacing-micro
    width: 100%

  &__submit
    visibility: hidden

  &__input
    background: $highlight-green
    color: $regular-red
    font-size: 1.2rem
    line-height: 1.3
    margin: $spacing-micro 0 0 0
    padding: 0
    width: 100%

    &-container
      display: flex

    &-error
      border: 1px dashed $regular-red

    &-first
      flex-basis: 40%
      margin-right: $spacing-small
      margin-top: 0

    &-last
      flex-basis: 60%
      margin-top: 0

    &-city
      flex-basis: 50%
      margin-top: 0

    &-day
      flex-basis: 30%
      margin-top: 0

    &-month
      flex-basis: 30%
      margin-top: 0

    &-year
      flex-basis: 60%
      margin-top: 0

    &-state
      flex-basis: 20%
      margin-top: 0

    &-zip
      flex-basis: 30%
      margin-top: 0
