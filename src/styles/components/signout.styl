.signout
  margin: $spacing-micro auto 0 auto
  width: 95%

  &-header
    align-items: center
    display: flex
    justify-content: space-between

  &-content
    align-items: center
    color: $regular-red
    display: flex
    flex-direction: column
    margin: 0 auto $spacing-base auto
    width: 60%

    .profile-total-hours
      font-size: 2rem

    .profile-current-hours
      font-size: 1.5rem
      margin-bottom: $spacing-small

  &-today-header
    color: $placeholder-red
    margin-top: $spacing-small + $spacing-micro
    text-align: center

  &-time
    align-items: flex-end
    display: flex
    flex-grow: 1
    font-size: 1.2rem
    justify-content: space-between
    width: 70%

  &-add-notes
    color: $placeholder-red
    text-align: center

  &-notes
    color: $placeholder-red
    margin-top: $spacing-small
    width: 100%

    &__input
      background: $input-background
      color: $regular-red
      font-size: 1rem
      height: $spacing-jumbo
      line-height: 1.3
      margin: $spacing-micro 0 0 0
      padding: 4px
      width: 100%

  &-confirm
    button
      color: $regular-red
      font-size: 1.5rem
      line-height: 1
      margin-top: $spacing-small
      text-align: center
      text-decoration: none

    &:hover
      border-bottom: $border-hover

  &-error
    border: 1px dashed $regular-red
    border-bottom: $border-hover
