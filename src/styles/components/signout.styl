.signout
  &__background
    align-items: center
    background-color: rgba(0, 0, 0, 0.5)
    bottom: 0
    display: flex
    height: 100%
    left: 0
    position: absolute
    right: 0
    top: 0
    width: 100%

  &__container
    align-items: center
    background-color: $background-yellow
    border: $border
    border-radius: $border-radius
    display: flex
    flex-direction: column
    height: 70vh
    margin: 0 auto
    padding: $spacing-small $spacing-base
    width: 35%

    .profile-title
      text-align: center
      margin-bottom: $spacing-small

    .profile-total-hours
      font-size: 2rem

    .profile-current-hours
      font-size: 1.5rem
      margin-bottom: $spacing-small

    &-manager
      height: 58vh

      .signout-today-header
        margin: 0

  &-today-header
    color: $placeholder-red
    margin-top: $spacing-small + $spacing-micro
    text-align: center

  &-time
    align-items: flex-end
    display: flex
    flex-grow: 1
    font-size: 1.2rem
    justify-content: space-between
    width: 80%

  &-add-notes
    color: $placeholder-red
    text-align: center

  &-notes
    color: $placeholder-red
    margin-top: $spacing-small
    width: 100%

    &__input
      background: $input-background
      color: $regular-red
      font-size: 1rem
      height: $spacing-jumbo
      line-height: 1.3
      margin: $spacing-micro 0 0 0
      padding: 4px
      width: 100%

  &-confirm
    align-items: center
    display: flex
    justify-content: space-between
    margin: 0 auto
    width: 100%

    button
      color: $regular-red
      font-size: 1.5rem
      line-height: 1
      margin-top: $spacing-small
      text-align: center
      text-decoration: none

      &:hover
        border-bottom: $border-hover

  &-error
    border: 1px dashed $regular-red
