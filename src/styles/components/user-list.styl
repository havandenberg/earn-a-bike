.user-list
  flex-grow: 1
  margin-top: $spacing-base

  &-header
    color: $placeholder-red
    font-size: 1.2rem
    margin-bottom: $spacing-micro

.user
  display: flex
  justify-content: space-between

  &-name
    background: transparent
    color: $regular-red
    cursor: pointer
    font-size: 1.5rem
    height: auto
    line-height: 1
    padding: $spacing-micro
    text-decoration: none

    &__link
      &:hover
        border-bottom: $border-hover

  &-pin
    align-items: center
    display: flex
    flex-grow: 1
    justify-content: flex-end
    width: 50%

    img
      height: $spacing-small
      margin-right: $spacing-small
      width: $spacing-small

    input
      border-bottom: $border-hover
      font-size: 1rem
      width: 40%

  &-time-in
    color: $placeholder-red
    margin-right: $spacing-micro
