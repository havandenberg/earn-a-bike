.user-list
  flex-grow: 1
  margin-top: $spacing-base

  &__options
    align-items: center
    display: flex
    justify-content: center
    margin-top: $spacing-small

    button
      margin-right: $spacing-small

    &:last-child
      margin-right: 0

    &-text
      color: $regular-red
      font-size: 1.2rem
      margin-right: $spacing-small

      &__export
        color: $black
        font-size: 1.2rem
        margin-right: $spacing-small

    &-clear-visits
      font-size: 0.8rem

  &__users
    height: 46vh
    overflow-y: auto
    padding-right: $spacing-micro

    &-sign-in
      height: 57vh

  &__add-manager
    color: $regular-red
    font-size: 1rem
    line-height: 1
    text-align: center
    text-decoration: none

    &-container
      display: flex
      justify-content: center
      margin-top: $spacing-micro

    &:hover
      border-bottom: 1px solid $regular-red

  &-profile
    flex-basis: 45%
    flex-grow: 0
    margin-top: $spacing-micro

    .input-search
      margin: 0
      margin-bottom: $spacing-micro

  &-header
    color: $placeholder-red
    font-size: 1.2rem
    padding-left: $spacing-micro

  &__sort
    font-size: 1rem
    padding: 0 $spacing-micro 0 0

    &:last-child
      padding: 0

    &:hover
      font-weight: 600

    &-active
      font-weight: 600

  &__filter
    font-size: 1rem
    padding: 0 $spacing-small $spacing-micro

    &-container
      align-items: center;
      display: flex;
      justify-content: center;

    &:hover
      font-weight: 600

    &-active
      font-weight: 600

    &__over-ten
      color: $dark-green

.user
  align-items: center
  display: flex
  justify-content: space-between

  &-left
    align-items: center
    display: flex

  &-name
    background: transparent
    color: $regular-red
    font-size: 1.5rem
    height: auto
    line-height: 1
    padding: $spacing-micro
    text-align: left
    text-decoration: none

    &__link
      cursor: pointer
      &:hover
        border-bottom: $border-hover

    &__profile
      flex-basis: 90%
      font-size: 1.3rem
      overflow: hidden
      text-overflow: ellipsis

      &-link
        cursor: pointer
        &:hover
          font-weight: 600

      &-active
        font-weight: 600

      &-over-ten
        color: $dark-green

  &-pin
    align-items: center
    display: flex
    flex-grow: 1
    justify-content: flex-end
    width: 50%

    img
      height: $spacing-small
      margin-right: $spacing-small
      width: $spacing-small

    input
      border-bottom: $border-hover
      color: $regular-red
      font-size: 1rem
      letter-spacing: 4px
      width: 56px

      +placeholder()
        color: $placeholder-red
        letter-spacing: normal
        transition: all 0.3s ease

  &-time-in
    color: $placeholder-red
    margin-right: $spacing-micro

  &-signout
    color: $regular-red
    cursor: pointer
    font-size: 1rem
    padding: 0 $spacing-micro 4px

    &:hover
      border-bottom: 1px solid $regular-red

    &__over-ten
      color: $dark-green

      &:hover
        border-bottom: 1px solid $dark-green
